@model AppMvc.Models.Collaborator

@{
    ViewBag.Title = "Detalhes do Colaborador";
}

<h2 class="text-primary mb-4"><i class="fas fa-info-circle"></i> Detalhes do Colaborador</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="text-secondary">Informações do Colaborador</h4>
        <hr />
        <dl class="row">
            <!-- Nome -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <!-- CodigoUnidade -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.CodigoUnidade)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CodigoUnidade)
            </dd>

            <!-- IdUnidade -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.IdUnidade)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IdUnidade)
            </dd>

            <!-- Ativo -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Ativo)
            </dt>
            <dd class="col-sm-9">
                @if (Model.Ativo)
                {
                    <span class="text-success">Ativo</span>
                }
                else
                {
                    <span class="text-danger">Inativo</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary mr-2" })
    @Html.ActionLink("Voltar à Lista", "Index", null, new { @class = "btn btn-secondary" })
</div>
