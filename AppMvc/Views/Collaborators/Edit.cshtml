@model AppMvc.Models.Collaborator

@{
    ViewBag.Title = "Editar Colaborador";
}

<h2 class="text-primary mb-4"><i class="fas fa-edit"></i> Editar Colaborador</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="text-secondary">Informações do Colaborador</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
        @Html.HiddenFor(model => model.Id)

        <!-- Nome Field -->
        <div class="form-group row">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o nome do colaborador" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- CodigoUnidade Field -->
        <div class="form-group row">
            @Html.LabelFor(model => model.CodigoUnidade, htmlAttributes: new { @class = "control-label col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CodigoUnidade, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o código da unidade" } })
                @Html.ValidationMessageFor(model => model.CodigoUnidade, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- IdUnidade Field -->
        <div class="form-group row">
            @Html.LabelFor(model => model.IdUnidade, htmlAttributes: new { @class = "control-label col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IdUnidade, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o ID da unidade" } })
                @Html.ValidationMessageFor(model => model.IdUnidade, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Ativo Field -->
        <div class="form-group row">
            @Html.LabelFor(model => model.Ativo, htmlAttributes: new { @class = "control-label col-md-2 col-form-label" })
            <div class="col-md-10">
                <div class="form-check">
                    @Html.EditorFor(model => model.Ativo, new { htmlAttributes = new { @class = "form-check-input" } })
                    <label class="form-check-label" for="Ativo">Ativo</label>
                    @Html.ValidationMessageFor(model => model.Ativo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <!-- Save Button -->
        <div class="form-group row">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Salvar
                </button>
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary ml-2" })
            </div>
        </div>
    </div>
}

<div class="mt-3">
    @Html.ActionLink("Voltar para a Lista", "Index", null, new { @class = "btn btn-link" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
