@model IEnumerable<AppMvc.Models.Collaborator>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-primary mb-4"><i class="fas fa-users"></i> Colaboradores</h2>

<div class="mb-3">
    @Html.ActionLink("Criar Novo", "Create", null, new { @class = "btn btn-primary btn-lg" })
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoUnidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUnidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodigoUnidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdUnidade)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Ativo)*@
                    @if (item.Ativo)
                    {
                        <span class="text-success">Ativo</span>
                    }
                    else
                    {
                        <span class="text-danger">Inativo</span>
                    }
                </td>
                <td class="text-center">
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm mr-1" }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm mr-1" }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Você tem certeza que deseja deletar este colaborador?');" })
                </td>
            </tr>
        }
    </tbody>
</table>