@model AppMvc.Models.Unit

@{
    ViewBag.Title = "Adicionar Unidade";
}

<h2 class="text-primary mb-4"><i class="fas fa-building"></i> Adicionar nova unidade</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="text-secondary">Informações da Unidade</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

        <!-- UniqueCode Field -->
        <div class="form-group row">
            @Html.LabelFor(model => model.UniqueCode, htmlAttributes: new { @class = "control-label col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UniqueCode, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o código único" } })
                @Html.ValidationMessageFor(model => model.UniqueCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Name Field -->
        <div class="form-group row">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o nome da unidade" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- IsActive Field -->
        <div class="form-group row">
            @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-2 col-form-label" })
            <div class="col-md-10">
                <div class="form-check">
                    @Html.EditorFor(model => model.IsActive, new { htmlAttributes = new { @class = "form-check-input" } })
                    <label class="form-check-label" for="IsActive">Ativo</label>
                    @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="form-group row">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-check"></i> Criar
                </button>
                @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
