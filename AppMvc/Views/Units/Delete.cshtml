@model AppMvc.Models.Unit

@{
    ViewBag.Title = "Excluir Unidade";
}

<h2 class="text-danger mb-4"><i class="fas fa-trash-alt"></i> Excluir Unidade</h2>

<h3 class="text-warning">Tem certeza de que deseja excluir esta unidade?</h3>

<div class="card shadow-sm mt-4">
    <div class="card-body">
        <h4 class="text-secondary">Informações da Unidade</h4>
        <hr />
        <dl class="row">
            <!-- UniqueCode -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.UniqueCode)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.UniqueCode)
            </dd>

            <!-- Name -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <!-- IsActive -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.IsActive, new { @class = Model.IsActive ? "text-success" : "text-danger" })
            </dd>
        </dl>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Excluir
        </button>
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary ml-2" })
    </div>
}
