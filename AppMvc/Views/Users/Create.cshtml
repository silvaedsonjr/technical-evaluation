@model AppMvc.Models.User

@{
    ViewBag.Title = "Adicionar Usuário";
}

<h2 class="text-primary mb-4"><i class="fas fa-user-plus"></i> Adicionar Novo Usuário</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="text-secondary">Dados do Usuário</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger text-center" })

        <!-- Login Field -->
        <div class="form-group row">
            @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite o login do usuário" } })
                @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Password Field -->
        <div class="form-group row">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Digite a senha do usuário" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Ativo Field -->
        <div class="form-group row">
            @Html.LabelFor(model => model.Ativo, htmlAttributes: new { @class = "control-label col-md-2 col-form-label" })
            <div class="col-md-10">
                <div class="form-check">
                    @Html.CheckBoxFor(model => model.Ativo, new { @class = "form-check-input" })
                    <label class="form-check-label" for="Ativo">Ativo</label>
                    @Html.ValidationMessageFor(model => model.Ativo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <!-- Save Button -->
        <div class="form-group row">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Salvar
                </button>
                @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-secondary ml-2" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
