@model AppMvc.Models.User

@{
    ViewBag.Title = "Detalhes do Usuário";
}

<h2 class="text-primary mb-4"><i class="fas fa-user"></i> Detalhes do Usuário</h2>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="text-secondary">Informações do Usuário</h4>
        <hr />
        <dl class="row">
            <!-- Login -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Login)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Login)
            </dd>

            <!-- Password (escondida com asteriscos) -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Password)
            </dt>
            <dd class="col-sm-9">
                @Html.Raw(new string('*', 8)) <!-- Exibe 8 asteriscos como substitutos da senha -->
            </dd>

            <!-- Ativo -->
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Ativo)
            </dt>
            <dd class="col-sm-9">
                @if (Model.Ativo)
                {
                    <span class="text-success">Ativo</span>
                }
                else
                {
                    <span class="text-danger">Inativo</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary mr-2" })
    @Html.ActionLink("Voltar à Lista", "Index", null, new { @class = "btn btn-secondary" })
</div>
