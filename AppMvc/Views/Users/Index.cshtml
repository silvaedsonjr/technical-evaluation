@model IEnumerable<AppMvc.Models.User>

@{
    ViewBag.Title = "Gestão de Usuários";
}

@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h5>@TempData["Mensagem"].ToString()</h5>
    </div>
}

<h2 class="text-primary mb-4"><i class="fas fa-users"></i> Gestão de Usuários</h2>

<div class="mb-3">
    <a href="@Url.Action("Create")" class="btn btn-primary btn-lg">
        <i class="fas fa-plus"></i> Novo Usuário
    </a>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th style="width: 150px;">@Html.DisplayNameFor(model => model.Login)</th>
            <th>@Html.DisplayNameFor(model => model.Password)</th>
            <th>@Html.DisplayNameFor(model => model.Ativo)</th>
            <th class="text-center">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Login)</td>
                <td>@Html.Raw(new string('*', 8))</td>
                <td>
                    @if (item.Ativo)
                    {
                        <span class="text-success">Ativo</span>
                    }
                    else
                    {
                        <span class="text-danger">Inativo</span>
                    }
                </td>
                <td class="text-center">
                    <a href="@Url.Action("Edit", "Users", new { id = item.Id })" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Editar
                    </a> |
                    <a href="@Url.Action("Details", "Users", new { id = item.Id })" class="btn btn-info btn-sm">
                        <i class="fas fa-info-circle"></i> Detalhes
                    </a> |
                    <a href="@Url.Action("Delete", "Users", new { id = item.Id })" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
